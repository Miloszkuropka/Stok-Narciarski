<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SkiApp.Common.CustomEntry">
    <VerticalStackLayout>
        <Label TextColor="Grey" Text="Surname" />
        <Frame CornerRadius="10" BorderColor="Grey" BackgroundColor="White" Padding="15,0,0,0" Margin="0">
            <Entry Text="{Binding Surname}" TextColor="Black" VerticalOptions="Center" Placeholder="Surname" FontSize="15" />
        </Frame>
    </VerticalStackLayout>
</ContentView>
